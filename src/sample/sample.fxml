<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns ="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">

    <Label text = "I love bacon" fx:id="firstLabel" />
    <Label text = "${firstLabel.text}"/> <!-- Binding example -->

    <fx:define>
        <ToggleGroup fx:id="toggleGroup"/>
    </fx:define>

    <Label text ="Difficulty"/>

    <RadioButton text = "Easy" toggleGroup="$toggleGroup"/>
    <RadioButton text = "Medium" toggleGroup="$toggleGroup"/>
    <RadioButton text = "Hard" toggleGroup="$toggleGroup"/>




    <Button text="Submit" fx:id="button" onAction="#handleButton"/> <!-- Id references the parameter name, onAction references the method that handles the logic -->

</VBox>